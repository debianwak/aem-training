<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="TypeSize"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Opciones de Video">
                <items jcr:primaryType="cq:WidgetCollection">
                    <platform
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Source of video: Youtube, Vimeo"
                        fieldLabel="Platform"
                        name="./platform"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <youtube
                                jcr:primaryType="nt:unstructured"
                                text="Youtube"
                                value="1"/>
                            <vimeo
                                jcr:primaryType="nt:unstructured"
                                text="Vimeo"
                                value="2"/>
                        </options>
                    </platform>
                    <url-video
                        jcr:primaryType="cq:Widget"
                        fieldDescription="URL Id Video"
                        fieldLabel="URL ID"
                        name="./url-video"
                        xtype="textfield"/>
                    <type
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Aspect ratio for video 16:9 or 4:3"
                        fieldLabel="Type / Size"
                        name="./type"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <_x0031_6_9
                                jcr:primaryType="nt:unstructured"
                                text="16:9"
                                value="embed-responsive-16by9"/>
                            <_x0034__3
                                jcr:primaryType="nt:unstructured"
                                text="4:3"
                                value="embed-responsive-4by3"/>
                        </options>
                    </type>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
